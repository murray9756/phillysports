{
  "expo": {
    "name": "PhillySports",
    "slug": "phillysports",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "phillysports",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#8b0000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.phillysports.app",
      "associatedDomains": [
        "applinks:phillysports.com",
        "applinks:www.phillysports.com"
      ],
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to securely login to your account"
      }
    },
    "android": {
      "package": "com.phillysports.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#8B0000"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "phillysports.com",
              "pathPrefix": "/"
            },
            {
              "scheme": "https",
              "host": "www.phillysports.com",
              "pathPrefix": "/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#8B0000",
          "sounds": []
        }
      ]
    ],
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#8B0000",
      "androidMode": "default",
      "androidCollapsedTitle": "PhillySports"
    },
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "apiUrl": "https://phillysports.com/api",
      "pusherKey": "YOUR_PUSHER_KEY",
      "pusherCluster": "us2"
    }
  }
}
