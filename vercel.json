{
  "buildCommand": "",
  "outputDirectory": ".",
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "phillesports.com" }],
      "destination": "https://www.phillysports.com/esports/:path*",
      "permanent": false
    },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.phillesports.com" }],
      "destination": "https://www.phillysports.com/esports/:path*",
      "permanent": false
    }
  ],
  "rewrites": [
    { "source": "/admin", "destination": "/admin.html" },
    { "source": "/post", "destination": "/post.html" }
  ],
  "crons": [
    {
      "path": "/api/bets/score",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/game-threads/check",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/pools/check",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/fetch-content",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/fantasy/cron/create-daily",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/fantasy/score",
      "schedule": "*/5 * * * *"
    }
  ]
}
